<!DOCTYPE html>
<html>
  <head>
    <title>PasswordManager</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
    <div class = "top_nav">
    <nav class="navbar">
      <ul class="nav navbar-nav">
        <li class="nav-item">
        <%= link_to "Home", main_url %>
        </li>
        <li class="nav-item">
        <%= link_to "Generate Password", new_url %>
        </li>
        <%if user_signed_in?%>
        <li class="nav-item">
        <%= link_to "Look Up Passwords", lookup_url %>
        </li>
        <%end%>
      </ul>
      <ul class="nav navbar-nav navbar-right">
      <%if user_signed_in?%>
          <li class="nav-item">
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
          </li>
        <%else%>
          <li class="nav-item">
          <%= link_to "Sign Up", signup_url %>
          </li>
          <li class="nav-item">
          <%= link_to "Sign In", signin_url %>
          </li>
        <%end%>
      </ul>
      </nav>
  </div>
  <body>
    <%= render 'layouts/messages' %>


    <%= yield %>
  </body>
</html>
